<idea-plugin>
    <id>license.plugin</id>
    <name>License-Compatibility</name>
    <vendor>dmitrypogrebnoy</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="license.plugin.services.MyApplicationService"/>
        <projectService serviceImplementation="license.plugin.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="license.plugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
