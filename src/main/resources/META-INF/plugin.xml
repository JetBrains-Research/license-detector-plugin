<idea-plugin>
    <id>license-detector-plugin</id>
    <name>License-Compatibility</name>
    <vendor>dmitrypogrebnoy</vendor>

    <description><![CDATA[
    A plugin for IntelliJ IDEA for license management and incompatibility detection.
    ]]></description>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="withKotlin.xml">org.jetbrains.kotlin</depends>
    <depends optional="true" config-file="withGroovy.xml">org.intellij.groovy</depends>
    <depends optional="true" config-file="withXml.xml">com.intellij.modules.xml</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService
                serviceImplementation="com.jetbrains.licensedetector.intellij.plugin.ui.toolwindow.LicenseDetectorToolWindowAvailabilityService"/>
        <toolWindow id="Project Licenses" anchor="right" secondary="false"
                    canCloseContents="true"
                    factoryClass="com.jetbrains.licensedetector.intellij.plugin.ui.toolwindow.LicenseDetectorToolWindowFactory"/>
    </extensions>

    <applicationListeners>

    </applicationListeners>
    <actions>
        <action
                id="LicenseDetector.CreateProjectLicenseFileAction"
                class="com.jetbrains.licensedetector.intellij.plugin.actions.CreateProjectLicenseFile"
                description="Create project license file"
                popup="true"
                text="Project License File"
                icon="AllIcons.FileTypes.Text">
            <add-to-group group-id="NewGroup" relative-to-action="NewScratchFile" anchor="after"/>
        </action>
    </actions>

</idea-plugin>
