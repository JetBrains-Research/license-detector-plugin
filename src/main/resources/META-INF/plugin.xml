<idea-plugin>
    <id>license-detector-plugin</id>
    <name>License-Compatibility</name>
    <vendor>dmitrypogrebnoy</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService
                serviceImplementation="com.jetbrains.licensedetector.intellij.plugin.ui.toolwindow.LicenseDetectorToolWindowAvailabilityService"/>
        <toolWindow id="Packages" anchor="bottom" secondary="false"
                    canCloseContents="true"
                    factoryClass="com.jetbrains.licensedetector.intellij.plugin.ui.toolwindow.LicenseDetectorToolWindowFactory"/>
    </extensions>

    <applicationListeners>

    </applicationListeners>
    <actions>
        <action id="com.jetbrains.licensedetector.intellij.plugin.ShowDependencyAction"
                class="com.jetbrains.licensedetector.intellij.plugin.ShowDependencyAction">
            <keyboard-shortcut first-keystroke="ctrl alt Q" keymap="$default"/>
        </action>
    </actions>

</idea-plugin>
